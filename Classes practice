class Item:
    def __init__(self, item_type, price):
        self.item_type = item_type
        self._price = price
        
    @property
    def price(self):
        return self._price

class Cake(Item):
    def __init__(self, kind, slices,price):
            super().__init__("cake",price)
            self.kind = kind
            self.slices = slices

    def print_description(self):
        print(f"The {self.flavor} cake costs {self.price} and is divided into {self.slices} slices.")

    def sell(self,count):
        if(self.slices-count<=0):
            return"Cannot sell more slices than are remaining ("+ str(self.slices)+")!"
        if(count<=0):
            return "Cannot sell zero or negative slices"
        self.slices -=count
        return self.slices

spice_cake = Cake("spice", 18, 8)
chocolate_cake = Cake("chocolate", 24, 6)
